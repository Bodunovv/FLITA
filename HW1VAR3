#include <stdio.h>
#include <math.h>

int BinatiToDecimal(int);

int main()
{
printf("Введите дв. число: ");
int biNum;
scanf("%d", &biNum);
int decimalNum = BinatiToDecimal(biNum);
printf("дв. де.");
printf("\n%d = %d\n", biNum, decimalNum);
return 0;
}

int BinatiToDecimal(int x){
int res = 0, help = 0;
while(x){
int help2 = x % 10;
if(help2 == 1)
res += pow(2, help);
help++;
x /= 10;
}

return res;
}
